<div id="stylized" class="myform">

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<h1>Formulario de Evento</h1>
	<p>Inserte el contenido como se indica</p>
	
	<label for="event_closed">Evento cerrado
		<span class="small">Opción para cerrar evento</span>
	</label>
  <%= f.check_box :closed %>

	<label for="event_contact_email">Email de contacto
		<span class="small">Introduzca email de contacto</span>
	</label>
	<%= f.text_field :contact_email %>
	
  <label for="event_contact_phone">Teléfono de contacto
		<span class="small">Introduzca teléfono</span>
	</label>
	<%= f.text_field :contact_phone %>
	
	<%= f.submit "Enviar", :class => "button" %>
	
	<div class="spacer"></div>
<% end %>

</div>
